{
  "id": "com.gruijter.plugwise2py",
  "name": {
      "en": "Plugwise2py"
  },
  "description": {
    "en": "monitor and control plugwise circles via Plugwise2py",
    "nl": "lees en bestuur plugwise circles via Plugwise2py"
  },
	"tags": {
		"en": [ "plugwise", "energy monitoring" ],
		"en": [ "plugwise", "energie meten"  ]
	},
  "version": "2.0.0",
  "compatibility": ">= 1.5",
	"sdk": 2,
  "author": {
      "name": "Gruijter",
      "email": "gruijter@hotmail.com"
  },

  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },

  "category": ["energy","appliances", "tools"],

  "drivers": [
    {
      "id": "circle",
      "name": {
        "en": "Plugwise2py",
        "nl": "Plugwise2py"
      },
      "class": "socket",
      "capabilities": [ "onoff", "measure_power", "meter_power" ],
       "images": {
        "large": "drivers/circle/assets/images/large.jpg",
        "small": "drivers/circle/assets/images/small.jpg"
      },
      "pair": [
          {
              "id": "list_circles",
              "template": "list_devices",
              "navigation": {
                  "next": "add_circles"
              }
          },
          {
              "id": "add_circles",
              "template": "add_devices"
          }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "pw2py Circle settings",
            "nl": "pw2py Circle instellingen"
          },
          "children": [
            {
              "id": "mac",
              "type": "label",
              "label": {
                "en": "mac",
                "nl": "mac"
              },
              "value": "A1B2C3D4"
            },
						{
              "id": "pollingInterval",
              "type": "number",
              "label": {
                "en": "polling interval (seconds)",
                "nl": "polling interval (seconden)"
              },
              "attr": { "min": 10 },
              "value": 20
            },
            {
              "id": "type",
              "type": "label",
              "label": {
                "en": "type",
                "nl": "type"
              },
              "value": "unknown"
            },
						{
              "id": "lastseen",
              "type": "label",
              "label": {
                "en": "Last seen",
                "nl": "Laatst gezien"
              },
              "value": " "
            },
            {
              "id": "production",
              "type": "label",
              "label": {
                "en": "production",
                "nl": "productie"
              },
              "value": " "
            },
            {
              "id": "pwName",
              "type": "label",
              "label": {
                "en": "pw2py name",
                "nl": "pw2py naam"
              },
              "value": " "
            },
            {
              "id": "location",
              "type": "label",
              "label": {
                "en": "pw2py location",
                "nl": "pw2py locatie"
              },
              "value": " "
            },
            {
              "id": "switchable",
              "type": "label",
              "label": {
                "en": "switchable",
                "nl": "schakelbaar"
              },
              "value": "true"
            },
            {
              "id": "schedule",
              "type": "label",
              "label": {
                "en": "schedule",
                "nl": "tijdschema"
              },
              "value": "off"
            },
            {
              "id": "schedname",
              "type": "label",
              "label": {
                "en": "schedule name",
                "nl": "tijdschema naam"
              },
              "value": "off"
            }
          ]
        }
      ]
    }
  ]
}
